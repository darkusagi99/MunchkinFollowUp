<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="36sp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/level"
        android:textSize="36dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageButton
        android:id="@+id/leveldown"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/text_margin"
        app:srcCompat="@drawable/ic_baseline_remove_circle_outline_36"
        android:contentDescription="@string/remove_one_level"/>

    <TextView
        android:id="@+id/level_text"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_weight="1"
        android:textSize="36sp"
        android:textAlignment="center"
        android:text="" />

    <ImageButton
        android:id="@+id/levelup"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/text_margin"
        app:srcCompat="@drawable/ic_baseline_add_circle_outline_36"
        android:contentDescription="@string/add_one_level"/>
</LinearLayout>