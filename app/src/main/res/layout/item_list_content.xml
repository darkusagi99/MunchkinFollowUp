<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="136sp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/text_margin"
            android:text="@string/level"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/leveldown"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/remove_one_level"
            android:src="@drawable/ic_baseline_remove_circle_outline_36" />

        <TextView
            android:id="@+id/level_text"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="center"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/levelup"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/add_one_level"
            android:src="@drawable/ic_baseline_add_circle_outline_36" />
    </LinearLayout>

</LinearLayout>